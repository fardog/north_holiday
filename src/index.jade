doctype 5
html(lang="en")
  head
    title Happy Holidays
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="NORTH Holiday downloadables, 2013")
    meta(name="author", content="Nathan Wittstock, Far Dog LLC")
    meta(name="keywords", content="")
    meta(name="copyright", content="Far Dog LLC, Copyright (c) 2013.")

    script(type="text/javascript", src=modernizr)
    each file in css
      link(rel="stylesheet", href=file)
  body
    .row
      .large-6.medium-6.small-10.large-centered.medium-centered.small-centered.columns
        form
          .box(data-bind="click: focusDownloadBox")
            h2(data-bind="text: downloadFormText") Enter Download Code Here
            input#downloadCode(type="text", name="downloadCode", data-bind="value: downloadCode")
          button(type="submit", name="submit", data-bind="click: checkDownloadCode") Download

    each file in js
      script(type="text/javascript", src=file)
